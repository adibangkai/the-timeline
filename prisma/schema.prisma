// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  password  String
  firstName String?
  lastName  String?
  level     String   @default("kocak")
}

model Tokoh {
  id          String   @id @default(uuid())
  name        String
  nick        String
  fullname    String
  partai      String
  jabatan     String?
  quotes      Quotes[]
  topic       Topic[]
  deleted     Boolean   @default(false)
}

model Topic {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())

  tokohId     String
  tokoh       Tokoh @relation(fields: [tokohId], references: [id])

  topicName   String
  quotes      Quotes[]

}
model Quotes {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())

  ownerId     String
  owner       Tokoh @relation(fields: [ownerId], references: [id])
  topicId     String 
  topic       Topic @relation(fields: [topicId], references: [id])

  quote       String
  dateQuote   DateTime
  sourceQuote String

  deleted     Boolean   @default(false)

  @@index([ownerId])
}

model Saran {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  name        String
  email       String
  masukan     String
}
model Kontribusi {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  name        String
  email       String
  masukan     String
  sourceLink  String
}